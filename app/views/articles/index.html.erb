 <div class="row">
<% @articles.each do |article| %>
	<div class="col-sm-4">
	   <div class="panel panel-default bootcards-media">
  <div class="panel-heading" style="min-height: 80px; max-height: 80px;">
    <h3 class="panel-title"><a href="/articles/<%= article.id %>"><%=article.title %></a></h3>
  </div>
  <div class="panel-body" style="min-height: 100px; max-height: 100px; overflow-y: scroll;">
    <%=article.first_few_lines %>
  </div>
  <div class="panel-body" style="text-align: center;">
  <img src="<%=article.photo_url %>" class="img-responsive" style="min-height: 200px; max-height: 200px;"/>
  </div>
  <div class="panel-footer">
    <div class="btn-group">
      <div class="btn-group">
        <button class="btn btn-default btn-sm">
          <i class="fa fa-arrow-down"></i>
          Download
        </button>
      </div>
      <div class="btn-group">
        <button class="btn btn-default btn-sm">
          <i class="fa fa-star"></i>
          Favorite
        </button>
      </div>
      <div class="btn-group">
        <button class="btn btn-default btn-sm">
          <i class="fa fa-envelope"></i>
          Email
        </button>
      </div>
    </div>
  </div>
</div>
	</div>
<% end %>
</div>